<h1>Edit Character</h1>

<%= form_for [@house, @character] do |f| %>
  <div class="form_meta_field">
    <%= f.label :img_url %>
    <%= f.text_field :img_url %>
  </div>
  <div class="form_meta_field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.submit %>
<% end %>

<%= form_for [@house, @character], method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete"%>
<% end %>

<%= link_to 'Back', house_character_path %>
